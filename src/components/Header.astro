---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
import BlinkingCursor from './BlinkingCursor.astro';
---

<header class="terminal-header">
	<div class="traffic-lights">
		<span class="traffic-light close" aria-label="Close"></span>
		<span class="traffic-light minimize" aria-label="Minimize"></span>
		<span class="traffic-light maximize" aria-label="Maximize"></span>
	</div>
	
	<div class="terminal-prompt-header">
		<span class="terminal-user">user</span>
		<span class="terminal-at">@</span>
		<span class="terminal-host">blog</span>
		<span class="terminal-separator">:</span>
		<span class="terminal-path">~</span>
		<span class="terminal-symbol">$</span>
		<span class="terminal-command">{SITE_TITLE}</span>
		<BlinkingCursor />
	</div>
	
	<div class="header-controls">
		<ThemeToggle />
	</div>
</header>

<nav class="terminal-nav">
	<div class="internal-links">
		<HeaderLink href="/">home</HeaderLink>
		<HeaderLink href="/blog">blog</HeaderLink>
		<HeaderLink href="/about">about</HeaderLink>
	</div>
	<div class="social-links">
		<a href="https://github.com/withastro/astro" target="_blank" aria-label="GitHub">
			<svg viewBox="0 0 16 16" aria-hidden="true" width="20" height="20">
				<path
					fill="currentColor"
					d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
				></path>
			</svg>
		</a>
	</div>
</nav>

<style>
	.terminal-header {
		background: linear-gradient(
			to bottom,
			var(--terminal-bg-secondary) 0%,
			var(--terminal-bg) 100%
		);
		padding: 12px 16px;
		display: flex;
		align-items: center;
		gap: 16px;
		border-bottom: 1px solid rgba(255, 255, 255, 0.05);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.traffic-lights {
		display: flex;
		gap: 8px;
		flex-shrink: 0;
	}

	.traffic-light {
		width: 12px;
		height: 12px;
		border-radius: 50%;
		position: relative;
		transition: transform 0.1s ease;
	}

	.traffic-light:hover {
		transform: scale(1.1);
	}

	.traffic-light::before {
		content: '';
		position: absolute;
		top: 2px;
		left: 3px;
		width: 6px;
		height: 4px;
		border-radius: 50%;
		background: rgba(255, 255, 255, 0.3);
	}

	.traffic-light.close {
		background: var(--traffic-close);
	}

	.traffic-light.minimize {
		background: var(--traffic-minimize);
	}

	.traffic-light.maximize {
		background: var(--traffic-maximize);
	}

	.terminal-prompt-header {
		flex: 1;
		font-family: "SF Mono", "Menlo", "Monaco", "Courier New", monospace;
		font-size: 14px;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.terminal-user {
		color: var(--terminal-magenta);
		font-weight: 600;
	}

	.terminal-at {
		color: var(--terminal-text-muted);
	}

	.terminal-host {
		color: var(--terminal-cyan);
		font-weight: 600;
	}

	.terminal-separator {
		color: var(--terminal-text-muted);
	}

	.terminal-path {
		color: var(--terminal-warning);
	}

	.terminal-symbol {
		color: var(--terminal-text);
		margin: 0 4px;
	}

	.terminal-command {
		color: var(--terminal-success);
		font-weight: 500;
	}

	.header-controls {
		display: flex;
		align-items: center;
		gap: 12px;
	}

	.terminal-nav {
		background: var(--terminal-bg);
		padding: 0 16px;
		display: flex;
		align-items: center;
		justify-content: space-between;
		border-bottom: 1px solid var(--terminal-bg-secondary);
	}

	.internal-links {
		display: flex;
		gap: 0;
	}

	.internal-links :global(a) {
		padding: 12px 16px;
		color: var(--terminal-text-muted);
		text-decoration: none;
		border-bottom: 2px solid transparent;
		transition: all 0.2s ease;
		font-size: 14px;
	}

	.internal-links :global(a:hover) {
		color: var(--terminal-text);
		background: rgba(255, 255, 255, 0.03);
	}

	.internal-links :global(a.active) {
		color: var(--terminal-accent);
		border-bottom-color: var(--terminal-accent);
	}

	.social-links {
		display: flex;
		gap: 12px;
	}

	.social-links a {
		color: var(--terminal-text-muted);
		padding: 8px;
		border-radius: 6px;
		transition: all 0.2s ease;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.social-links a:hover {
		color: var(--terminal-text);
		background: rgba(255, 255, 255, 0.05);
	}

	@media (max-width: 720px) {
		.terminal-header {
			padding: 10px 12px;
			gap: 12px;
		}

		.terminal-prompt-header {
			font-size: 12px;
		}

		.traffic-light {
			width: 10px;
			height: 10px;
		}

		.terminal-nav {
			padding: 0 12px;
		}

		.internal-links :global(a) {
			padding: 10px 12px;
			font-size: 13px;
		}

		.social-links {
			display: none;
		}
	}

	@media (max-width: 480px) {
		.terminal-prompt-header {
			display: none;
		}
	}
</style>
