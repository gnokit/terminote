---
// Terminal Window Component - macOS Terminal Window Wrapper
interface Props {
	title?: string;
	showTrafficLights?: boolean;
	showStatusBar?: boolean;
	statusText?: string;
	class?: string;
}

const { 
	title = "Terminal", 
	showTrafficLights = true, 
	showStatusBar = false,
	statusText = "bash",
	class: className = ""
} = Astro.props;
---

<div class={`terminal-window ${className}`}>
	<div class="terminal-header">
		{showTrafficLights && (
			<div class="traffic-lights">
				<span class="traffic-light close" aria-label="Close"></span>
				<span class="traffic-light minimize" aria-label="Minimize"></span>
				<span class="traffic-light maximize" aria-label="Maximize"></span>
			</div>
		)}
		<span class="terminal-title">{title}</span>
	</div>
	
	<div class="terminal-content">
		<slot />
	</div>
	
	{showStatusBar && (
		<div class="terminal-status-bar">
			<span>{statusText}</span>
			<span>UTF-8</span>
		</div>
	)}
</div>

<style>
	.terminal-window {
		background: var(--terminal-bg);
		border-radius: 10px;
		box-shadow: var(--terminal-shadow);
		overflow: hidden;
		margin: 2rem 0;
	}

	.terminal-header {
		background: linear-gradient(
			to bottom,
			var(--terminal-bg-secondary) 0%,
			var(--terminal-bg) 100%
		);
		padding: 12px 16px;
		display: flex;
		align-items: center;
		gap: 8px;
		border-bottom: 1px solid rgba(255, 255, 255, 0.05);
	}

	.traffic-lights {
		display: flex;
		gap: 8px;
		flex-shrink: 0;
	}

	.traffic-light {
		width: 12px;
		height: 12px;
		border-radius: 50%;
		position: relative;
		transition: transform 0.1s ease;
	}

	.traffic-light:hover {
		transform: scale(1.1);
	}

	.traffic-light::before {
		content: '';
		position: absolute;
		top: 2px;
		left: 3px;
		width: 6px;
		height: 4px;
		border-radius: 50%;
		background: rgba(255, 255, 255, 0.3);
	}

	.traffic-light.close {
		background: var(--traffic-close);
	}

	.traffic-light.minimize {
		background: var(--traffic-minimize);
	}

	.traffic-light.maximize {
		background: var(--traffic-maximize);
	}

	.terminal-title {
		flex: 1;
		text-align: center;
		font-size: 13px;
		color: var(--terminal-text-muted);
		font-weight: 500;
		margin: 0 16px;
		user-select: none;
	}

	.terminal-content {
		padding: 16px 20px;
		background: var(--terminal-bg);
		font-family: "SF Mono", "Menlo", "Monaco", "Courier New", monospace;
		font-size: 14px;
		line-height: 1.6;
	}

	.terminal-status-bar {
		background: var(--terminal-bg-secondary);
		padding: 6px 16px;
		font-size: 11px;
		color: var(--terminal-text-muted);
		display: flex;
		justify-content: space-between;
		align-items: center;
		border-top: 1px solid rgba(255, 255, 255, 0.05);
	}

	@media (max-width: 720px) {
		.terminal-window {
			margin: 1rem 0;
			border-radius: 8px;
		}

		.terminal-header {
			padding: 10px 12px;
		}

		.terminal-title {
			font-size: 12px;
		}

		.terminal-content {
			padding: 12px 16px;
			font-size: 13px;
		}

		.traffic-light {
			width: 10px;
			height: 10px;
		}
	}
</style>
